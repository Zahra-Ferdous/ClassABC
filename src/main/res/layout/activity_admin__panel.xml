<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_green"
    android:padding="10dp"
    android:weightSum="5"
    tools:context=".Admin_Panel">

    <TextView
        android:layout_weight=".25"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Wecome to Admin Panel"
        android:textStyle="bold"
        android:textColor="@color/deep_green"
        android:textSize="24sp"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:background="@color/deep_green"
            android:textSize="22sp"
            android:text="Course:"
            android:textAlignment="viewEnd"
            android:textStyle="bold"
            />
        <Spinner
            android:id="@+id/course_select_spinnerId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:background="@color/deep_green"
            android:textSize="22sp"
            android:text="Session:"
            android:textAlignment="viewEnd"
            android:textStyle="bold"
            />
        <Spinner
            android:id="@+id/session_select_spinnerId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/class_id"
        android:layout_width="match_parent"
        android:layout_weight=".25"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:background="@color/deep_green"
        android:textSize="22sp"
        android:text="Class_ID"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2.5"
        android:layout_margin="10dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_height="0dp">

        <Button
            android:id="@+id/attendenceButtonId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/deep_green"
            android:text="Attendence"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/result_sheetButtonId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/deep_green"
            android:text="Create result Sheet"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            />

    </LinearLayout>

</LinearLayout>