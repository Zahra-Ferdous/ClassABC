<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_green"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:text="Sign up and get started!"
        android:textColor="@color/deep_green"
        />

    <EditText
        android:id="@+id/et1id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="2dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@color/white"
        android:textColor="@color/deep_green"
        android:hint="User Name"
        />

    <EditText
        android:id="@+id/et2id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="2dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@color/white"
        android:textColor="@color/deep_green"
        android:hint="Email"
        />

    <EditText
        android:id="@+id/et3id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="2dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:inputType="number"
        android:background="@color/white"
        android:textColor="@color/deep_green"
        android:hint="Roll Number"
        />

    <EditText
        android:id="@+id/et4id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="2dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@color/white"
        android:textColor="@color/deep_green"
        android:hint="Password"
        />
    <Button
        android:id="@+id/button1id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Sign up"
        android:backgroundTint="@color/deep_green"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
    <ProgressBar
        android:id="@+id/pbid"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/button2id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Signed up already? Login to your account."
        android:textAllCaps="false"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:textSize="17sp"
        android:textStyle="normal"
        android:textColor="@color/deep_green"
        />
</LinearLayout>