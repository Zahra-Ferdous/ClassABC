<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_green"
    tools:context=".Review">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_margin="10dp"
                android:background="@color/deep_green"
                android:text="Submit Course Review and Critiques for Course Improvement."
                android:textSize="20sp"
                android:textColor="@color/white"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <EditText
                android:id="@+id/revtextId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textColor="@color/deep_green"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:background="@color/white"
                />
            <Button
                android:id="@+id/subButtonId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="submit"
                android:layout_margin="10dp"
                android:background="@color/deep_green"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>